      "placement": {
        "hierarchy": {
          "primary": "Organization logo takes precedence",
          "secondary": "Platinum sponsors get prominent placement",
          "tertiary": "Gold sponsors get standard placement",
          "quaternary": "Silver and Bronze sponsors get grouped placement"
        },
        "positions": {
          "header": {
            "allowed": ["platinum", "gold"],
            "maxLogos": 3,
            "size": "80-120px height"
          },
          "footer": {
            "allowed": ["all_tiers"],
            "maxLogos": 12,
            "size": "60-80px height"
          },
          "sidebar": {
            "allowed": ["platinum", "gold", "silver"],
            "maxLogos": 6,
            "size": "100px width"
          },
          "content": {
            "allowed": ["platinum"],
            "maxLogos": 1,
            "size": "150px width",
            "context": "Must be contextually relevant"
          }
        }
      },
      "restrictions": {
        "prohibited": [
          "Stretching or distorting logo proportions",
          "Changing logo colors outside approved palette",
          "Adding effects like shadows, glows, or gradients",
          "Placing logo on busy or low-contrast backgrounds",
          "Using logo smaller than minimum size requirements",
          "Rotating logo more than 15 degrees",
          "Combining logo with other graphic elements"
