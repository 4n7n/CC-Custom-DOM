    "logoUsage": {
      "formats": {
        "primary": {
          "description": "Logo principal para uso en fondos claros",
          "formats": ["PNG", "SVG", "EPS"],
          "minSize": "120px width",
          "maxSize": "500px width",
          "clearSpace": "50% of logo width on all sides",
          "backgroundColor": "White or light backgrounds only"
        },
        "reverse": {
          "description": "Logo para uso en fondos oscuros",
          "formats": ["PNG", "SVG", "EPS"],
          "minSize": "120px width",
          "maxSize": "500px width",
          "clearSpace": "50% of logo width on all sides",
          "backgroundColor": "Dark backgrounds (#000000 to #333333)"
        },
