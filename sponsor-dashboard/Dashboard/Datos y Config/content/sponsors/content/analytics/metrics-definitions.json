  "alertingRules": {
    "underperformance": {
      "condition": "< 80% of target",
      "severity": "warning",
      "action": "notify_team"
    },
    "critical_underperformance": {
      "condition": "< 60% of target",
      "severity": "critical",
      "action": "escalate_management"
    },
    "overperformance": {
      "condition": "> 120% of target",
      "severity": "info",
      "action": "celebrate_success"
    },
    "data_anomaly": {
      "condition": "deviation > 3 standard deviations",
      "severity": "warning",
      "action": "validate_data"
    }
  },
