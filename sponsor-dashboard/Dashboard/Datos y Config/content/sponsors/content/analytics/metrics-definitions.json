  "calculationMethods": {
    "sum": {
      "name": "Suma",
      "description": "Suma de todos los valores en el período",
      "formula": "Σ(values)"
    },
    "count": {
      "name": "Conteo",
      "description": "Número total de elementos",
      "formula": "COUNT(items)"
    },
    "unique_count": {
      "name": "Conteo Único",
      "description": "Número de elementos únicos",
      "formula": "COUNT(DISTINCT items)"
    },
    "average": {
      "name": "Promedio",
      "description": "Valor promedio del período",
      "formula": "SUM(values) / COUNT(values)"
    },
    "ratio": {
      "name": "Ratio",
      "description": "Relación entre dos valores",
      "formula": "value1 / value2"
    },
    "percentage": {
      "name": "Porcentaje",
      "description": "Expresión en porcentaje",
      "formula": "(value / total) * 100"
    },
    "growth_rate": {
      "name": "Tasa de Crecimiento",
      "description": "Porcentaje de crecimiento entre períodos",
      "formula": "((current - previous) / previous) * 100"
    },
    "weighted_average": {
      "name": "Promedio Ponderado",
      "description": "Promedio considerando pesos específicos",
      "formula": "Σ(value * weight) / Σ(weight)"
    },
    "division": {
      "name": "División",
      "description": "División simple entre dos valores",
      "formula": "numerator / denominator"
    }
  },
